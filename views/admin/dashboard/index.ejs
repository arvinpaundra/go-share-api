<%- include ("../../partials/header.ejs") %>

<body class="g-sidenav-show  bg-gray-200">
  <%- include ("../../partials/sidebar.ejs") %>

  <!-- body -->
  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true">
      <div class="container-fluid py-1 px-3">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
            <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Pages</a></li>
            <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Dashboard</li>
          </ol>
          <h6 class="font-weight-bolder mb-0">Dashboard</h6>
        </nav>
        <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
          <div class="navbar-nav justify-content-end ms-md-auto pe-md-3">
            <form action="/admin/logout" method="GET" class="nav-item d-flex align-items-center">
              <button type="submit" class="nav-link btn text-body font-weight-bold px-0 d-flex justify-content-center align-items-center gap-1">
                <i class="material-icons opacity-10">logout</i>
                <span class="d-sm-inline d-none">Logout</span>
              </button>
            </form>
          </div>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->
    
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col"><%- include ("../../partials/message.ejs") %></div>
      </div>
      <div class="row mt-2">
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-header p-3 pt-2">
              <div class="icon icon-lg icon-shape bg-gradient-dark shadow-dark text-center border-radius-xl mt-n4 position-absolute">
                <i class="material-icons opacity-10">sports_kabaddi</i>
              </div>
              <div class="text-end pt-1">
                <p class="text-sm mb-0 text-capitalize">Total Users</p>
                <h4 class="mb-0"><%= users %></h4>
              </div>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-footer p-3">
              <a href="/admin/creators" class="mb-0 d-flex gap-1 align-items-center">Creators page <i class="material-icons">start</i></a>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-header p-3 pt-2">
              <div class="icon icon-lg icon-shape bg-gradient-primary shadow-primary text-center border-radius-xl mt-n4 position-absolute">
                <i class="material-icons opacity-10">surfing</i>
              </div>
              <div class="text-end pt-1">
                <p class="text-sm mb-0 text-capitalize">Active Members</p>
                <h4 class="mb-0"><%= members %></h4>
              </div>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-footer p-3">
              <a href="/admin/transactions" class="mb-0 d-flex gap-1 align-items-center">Transactions page <i class="material-icons">start</i></a>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-header p-3 pt-2">
              <div class="icon icon-lg icon-shape bg-gradient-success shadow-success text-center border-radius-xl mt-n4 position-absolute">
                <i class="material-icons opacity-10">backup_table</i>
              </div>
              <div class="text-end pt-1">
                <p class="text-sm mb-0 text-capitalize">Total Contents</p>
                <h4 class="mb-0"><%= contents %></h4>
              </div>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-footer p-3">
              <a href="/admin/contents" class="mb-0 d-flex gap-1 align-items-center">Contents page <i class="material-icons">start</i></a>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6">
          <div class="card">
            <div class="card-header p-3 pt-2">
              <div class="icon icon-lg icon-shape bg-gradient-info shadow-info text-center border-radius-xl mt-n4 position-absolute">
                <i class="material-icons opacity-10">confirmation_number</i>
              </div>
              <div class="text-end pt-1">
                <p class="text-sm mb-0 text-capitalize">Vouchers Available</p>
                <h4 class="mb-0"><%= vouchers %></h4>
              </div>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-footer p-3">
              <a href="/admin/vouchers" class="mb-0 d-flex gap-1 align-items-center">Vouchers page <i class="material-icons">start</i></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
<%- include ("../../partials/js.ejs") %>